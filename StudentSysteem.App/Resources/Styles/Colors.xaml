<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Note: For Android please see also Platforms\Android\Resources\values\colors.xml -->

    <Color x:Key="Primary">#246FB5</Color>
    <Color x:Key="Text">#242424</Color>
    <Color x:Key="Secondary">#F0F0F0</Color>
    <Color x:Key="Grey">#CCC</Color>
    <Color x:Key="White">White</Color>
    <Color x:Key="Black">Black</Color>
    
    <!-- Niveauaanduiding kleuren -->
    <Color x:Key="InOntwikkeling">#4594D3</Color>
    <Color x:Key="OpNiveau">#D5E05B</Color>
    <Color x:Key="BovenNiveau">#45B97C</Color>
    <Color x:Key="NietIngeleverd">#F5F5F5</Color>
    <Color x:Key="NietBeoordeelbaar">#F5F5F5</Color>
    
    <Color x:Key="Validatie">Red</Color>

    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Secondary}"/>
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}"/>
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource Black}"/>
</ResourceDictionary>