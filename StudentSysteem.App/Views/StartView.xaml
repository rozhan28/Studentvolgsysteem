<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StudentSysteem.App.Views.StartView"
             Title="Start">

    <VerticalStackLayout Padding="20" Spacing="25"
                         VerticalOptions="Center" HorizontalOptions="Center">

        <Label Text="Welkom in het studentvolgsysteem"
               FontSize="24"
               HorizontalOptions="Center"/>

        <Button x:Name="BtnZelfEvaluatie"
        Text="Vul zelfevaluatie in"
        Clicked="OpZelfEvaluatieGeklikt"/>

        <Button x:Name="BtnFeedback"
        Text="Geef feedback"
        Clicked="OpFeedbackGeklikt"/>

    </VerticalStackLayout>
</ContentPage>