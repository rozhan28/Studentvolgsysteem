<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StudentSysteem.App.Views.StartView"
             Title="Start">

    <VerticalStackLayout Padding="20" Spacing="25"
                         VerticalOptions="Center" HorizontalOptions="Center">

        <Label Text="Welkom in het studentvolgsysteem"
               FontSize="24"
               HorizontalOptions="Center"/>

        <Button Text="Vul zelfevaluatie in"
                IsVisible="{Binding IsStudent}"
                Command="{Binding GaNaarZelfEvaluatieCommand}" />

        <Button Text="Geef feedback" 
                IsVisible="{Binding IsIngelogd}"
                Command="{Binding GaNaarFeedbackCommand}" />

    </VerticalStackLayout>
</ContentPage>