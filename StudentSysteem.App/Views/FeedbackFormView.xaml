<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:StudentSysteem.App.ViewModels"
             x:Class="StudentSysteem.App.Views.FeedbackFormView"
             Title="Feedbackformulier">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Header -->
            <Grid ColumnDefinitions="Auto,*,Auto">
                <Button Text="Dashboard" />
                <Label Text="Feedbackformulier"
                       Grid.Column="1"
                       FontSize="22"
                       HorizontalOptions="Center" />
                <Image Source="person_icon.png"
                       Grid.Column="2"
                       HeightRequest="40"/>
            </Grid>

            <Line Stroke="Black" X2="2000" />

            <Label Text="Requirementsanalyseproces - DefiniÃ«ren probleemdomein" />
            <Label Text="Analyseren" FontAttributes="Italic" />
            <Label Text="Maken domeinmodel" FontAttributes="Bold" />
            <Label Text="Het maken van een domeinmodel volgens een UML klassendiagram" />

            <Label Text="Prestatiedoel" FontSize="20"/>

            <!-- Leeruitkomst -->
            <Frame BorderColor="{Binding IsLeeruitkomstInvalid, Converter={StaticResource BoolToColorConverter}}"
                   BackgroundColor="White"
                   Padding="0"
                   HasShadow="False">
                <Entry 
                    Placeholder="Leeruitkomst"
                    Text="{Binding Leeruitkomst}"
                    Margin="5"/>
            </Frame>

            <!-- Niveau -->
            <Frame BorderColor="{Binding IsPrestatieNiveauInvalid, Converter={StaticResource BoolToColorConverter}}"
                   BackgroundColor="White"
                   Padding="0"
                   HasShadow="False">
                <Picker 
                    Title="Selecteer prestatie niveau"
                    ItemsSource="{Binding PrestatieNiveaus}"
                    SelectedItem="{Binding PrestatieNiveau}"
                    Margin="5" />
            </Frame>

            <!-- Toelichting -->
            <Frame BorderColor="{Binding IsToelichtingInvalid, Converter={StaticResource BoolToColorConverter}}"
                   BackgroundColor="White"
                   Padding="0"
                   HasShadow="False">
                <Editor HeightRequest="150"
                        Placeholder="Voeg toelichting toe..."
                        Text="{Binding Toelichting}"
                        Margin="5"/>
            </Frame>

            <Label Text="{Binding StatusMelding}" 
                   TextColor="Red"
                   FontAttributes="Bold"/>

            <Button Text="Opslaan"
                    Command="{Binding SaveCommand}"
                    BackgroundColor="#0066cc"
                    TextColor="White"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
